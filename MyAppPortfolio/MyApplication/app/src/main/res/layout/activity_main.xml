<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff000000"
    tools:context="com.gensdevelopmentservices.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_title"
        android:textColor="#ffffffff"
        android:id="@+id/appTitle"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/btnStyle"
        android:text="POPULAR MOVIES"
        android:id="@+id/moives"
        android:onClick="movieMessage"
        android:layout_below="@+id/appTitle" />

    <Button
        style="@style/btnStyle"

        android:text="STOCK HAWK"
        android:id="@+id/stock"
        android:layout_below="@+id/moives"
        android:onClick="stockMessage"/>

    <Button
        style="@style/btnStyle"
        android:text="BUILD IT BIGGER"
        android:id="@+id/bigger"
        android:layout_below="@+id/stock"
        android:onClick="biggerMessage"/>

    <Button
        style="@style/btnStyle"
        android:text="MAKE YOUR APP MATERIAL"
        android:id="@+id/material"
        android:layout_below="@+id/bigger"
        android:onClick="materialMessage"/>

    <Button
        style="@style/btnStyle"
        android:text="GO UBIQUITOUS"
        android:id="@+id/ubiquitous"
        android:layout_below="@+id/material"
        android:onClick="ubiquitousMessage"/>

    <Button
        style="@style/btnStyle"
        android:text="CAPSTONE"
        android:id="@+id/capstone"
        android:layout_below="@+id/ubiquitous"
        android:onClick="capstoneMessage"/>


</RelativeLayout>
